import maya.cmds as cmds

#Script to help with scene/object cleanup.
#INSTRUCTIONS:
#Select objects in a scene, run script.
#The script will select objects with local object transforms.

objects = cmds.ls(sl=True)
cmds.select(clear=True)

for each in objects:
    attr = [cmds.getAttr(each+'.tx')]
    attr.append(cmds.getAttr(each+'.ty'))
    attr.append(cmds.getAttr(each+'.tz'))
    
    attr.append(cmds.getAttr(each+'.rx'))
    attr.append(cmds.getAttr(each+'.ry'))
    attr.append(cmds.getAttr(each+'.rz'))
    
    scaleAttr = [cmds.getAttr(each+'.sx')]
    scaleAttr.append(cmds.getAttr(each+'.sy'))
    scaleAttr.append(cmds.getAttr(each+'.sz'))
    
    for attribute in attr:
        if attribute != 0.0:
            cmds.select(each, add=True)
            
    for value in scaleAttr:
        if value != 1.0:
            cmds.select(each, add=True)
